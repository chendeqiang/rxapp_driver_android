<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_bar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/iv_back_wallet_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/default_margin10"
            android:padding="@dimen/default_margin10"
            android:src="@drawable/ic_whilte_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:lines="1"
            android:text="我的钱包规则"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/default_margin"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/text_color_black"
        android:text="司机端我的钱包规则"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:id="@+id/tv_time_freeze"
            android:text="当日流水收入需要冻结7天之后可以进行提现。"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:id="@+id/tv_drawtime"
            android:text="当日流水收入需要冻结7天之后可以进行提现。"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:id="@+id/tv_drawcount"
            android:text="当日流水收入需要冻结7天之后可以进行提现。"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/default_margin"
            android:id="@+id/tv_lowestmoney"
            android:text="当日流水收入需要冻结7天之后可以进行提现。"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>