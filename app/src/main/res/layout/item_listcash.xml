<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/btn_white_round2">

    <RelativeLayout
        android:id="@+id/rl_time"
        android:background="#ededed"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cash_time"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_centerVertical="true"
            android:text="3月13日 10:01:41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_cash_moneys"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="合计10元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rl_time"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_fund_flow"
            android:textSize="@dimen/text_size_16"
            android:text="平台账户"
            android:textStyle="bold"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_cash_alipay"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_14"
            android:text="支付宝(139****3381)"
            android:textColor="@color/text_color_black_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/rl_time"
        android:layout_toLeftOf="@id/iv_1"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cash_money"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:textColor="@color/text_color_black"
            android:text="10元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_cash_state"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_color_black"
            android:text="提现成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/default_margin2"
        android:layout_marginEnd="@dimen/default_margin"
        android:id="@+id/iv_1"
        android:layout_below="@id/rl_time"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_gree_arrow"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

</RelativeLayout>