<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.mxingo.driver.module.take.MainActivity"
                tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/ll_antiepidemic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_notice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin"
            android:text="防疫上报"
            android:textColor="#69cef8"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:src="@drawable/ic_home_bg"/>


    <FrameLayout
        android:visibility="visible"
        android:layout_above="@+id/btn_online"
        android:id="@+id/fi_call"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:elevation="3dp"
            app:backgroundTint="#FF2121"
            app:fabSize="normal"
            app:borderWidth="10dp"
            android:layout_margin="12dp"
            app:layout_anchorGravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14"
            android:layout_gravity="center"
            android:text="报警"
            android:elevation="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_online"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:background="@color/colorButtonBg"
        android:text="@string/online"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"/>

    <ImageView
        android:id="@+id/img_taking_order"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_margin"/>

</RelativeLayout>
