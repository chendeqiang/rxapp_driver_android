<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fund_flow"
                android:textSize="@dimen/text_size_16"
                android:text="订单收入"
                android:textStyle="bold"
                android:textColor="@color/text_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_time_fund_flow"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_14"
            android:text="03-13 09:00:00"
            android:textColor="@color/text_color_black_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_money_fund_flow"
        android:layout_marginTop="@dimen/default_margin2"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        android:textColor="@color/text_color_black"
        android:text="+10.00元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>